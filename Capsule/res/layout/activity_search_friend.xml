<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
   <RelativeLayout
        android:id="@+id/search_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/blue_background_normal" >
        <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
		    android:text="按号码查找"
		    android:textSize="16sp"
		    android:textColor="#002C4F"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_margin="15dp"
    	android:layout_below="@+id/search_friend_top_bar"
    	android:layout_centerHorizontal="true">
    <AutoCompleteTextView
        android:id="@+id/search_friend_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="11"
        android:textSize="14sp"
        android:hint="@string/input_number"
        android:inputType="phone"
        android:background="@drawable/round_edittext"
        tools:context=".SearchFriendActivity" />
    
     <Button 
            android:text="查找"
            android:layout_width="wrap_content"
        	android:layout_marginTop="15dp"
        	android:layout_height="40dip"
        	android:background="@drawable/login_btn_selector"
        	android:layout_below="@+id/search_friend_text"
        	android:contentDescription="@string/login"/>
     </RelativeLayout>
</RelativeLayout>
