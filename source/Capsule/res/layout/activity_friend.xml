<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3F7">

    <RelativeLayout
        android:id="@+id/friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/blue_background_normal" >

        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/round_blue_btn"
            android:gravity="center"
            android:padding="0dp"
            android:text="找TA"
            android:textSize="14sp" />

        <RadioGroup
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:orientation="horizontal">
	        <RadioButton 
	            android:id="@+id/radio_family"
	            android:layout_width="80dp"
		        android:layout_height="40dp"
		        android:text="亲密"
		        android:textSize="14sp"
		        android:gravity="center"
		        android:button="@null"
		        android:textColor="#000000"
		        android:background="@drawable/family_btn"
		        android:checked="true"/>
	        <RadioButton 
	            android:id="@+id/radio_friend"
	            android:layout_width="80dp"
		        android:layout_height="40dp"
		        android:text="好友"
		        android:textSize="14sp"
		        android:gravity="center"
		        android:button="@null"
		        android:textColor="#000000"
		        android:background="@drawable/friend_btn"/>
	    </RadioGroup>

    </RelativeLayout>
    
    <LinearLayout   
        android:id="@+id/friend_search"
        android:layout_below="@id/friend_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_round_edittext"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <ImageButton 
            android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:src="@drawable/search_icon"
	        android:scaleType="centerInside"
	        android:background="@null"
            />
         <LinearLayout 
             android:focusable="true" 
             android:focusableInTouchMode="true"
             android:layout_width="0px" 
             android:layout_height="0px"/>
         <EditText
            android:id="@+id/search_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="搜索联系人"
	        android:background="@null"
	        android:textSize="14sp"
	        android:textColor="#B7B7B7"
	        android:nextFocusUp="@id/search_text"
	        android:nextFocusDown="@id/search_text"
        />
    </LinearLayout>
  
	<ListView android:id="@android:id/list"
			android:layout_below="@id/friend_search"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent" 
			android:divider="#D4D4D4"
			android:dividerHeight="1dp"
			/>
</RelativeLayout>
