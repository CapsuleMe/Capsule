<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#EFF3F7">

    <RelativeLayout android:id="@+id/friend_top_bar"
     android:layout_width = "match_parent"
     android:layout_height="60dp"
     android:background="@drawable/blue_background_normal">
        <Button
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"            
            android:text="找TA" 
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/round_blue_btn"/>
        <RadioGroup
	    android:id="@+id/radioGroup1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

	    <RadioButton
	        android:id="@+id/radio0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:text="全部" />

	    <RadioButton
	        android:id="@+id/radio1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="亲密" />

	    <RadioButton
	        android:id="@+id/radio2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="好友" />
	</RadioGroup>
</RelativeLayout>
    
    <TextView android:id="@+id/friend_search"
        android:layout_below="@id/friend_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_round_edittext"
        android:text="search bar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />
    
	<ListView android:id="@android:id/list"
			android:layout_below="@id/friend_search"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent" 
			android:divider="#D4D4D4"
			android:dividerHeight="1dp"
			/>
</RelativeLayout>
