<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3F7">

    <RelativeLayout
        android:id="@+id/friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/blue_background_normal" >
        <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
		    android:text="提醒"
		    android:textSize="18sp"
		    android:textColor="#002C4F"/>
    </RelativeLayout>
    
    <LinearLayout   
        android:id="@+id/message_search"
        android:layout_below="@id/friend_top_bar"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_round_edittext"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <ImageButton 
            android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:src="@drawable/search_icon"
	        android:scaleType="centerInside"
	        android:background="@null"
            />
         <EditText
            android:id="@+id/message_search_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/search_friend_hint"
	        android:background="@null"
	        android:textSize="14sp"
	        android:textColorHint="#B7B7B7"
	        android:nextFocusUp="@id/search_text"
	        android:nextFocusDown="@id/search_text"
	        android:singleLine="true"
        />
    </LinearLayout>
  
	<ListView android:id="@android:id/list"
			android:layout_below="@id/message_search"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent" 
			android:divider="#D4D4D4"
			android:dividerHeight="1dp"
			/>
</RelativeLayout>
