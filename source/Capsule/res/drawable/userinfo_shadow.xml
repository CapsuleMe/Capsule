<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >  
    <!-- layout background -->  
    <item>  
        <!-- show rectangle area -->  
        <shape android:shape="rectangle" >  
            <gradient  
                android:angle="270"  
                android:startColor="@color/grey_deep"  
                android:centerColor="#000000"  
                android:endColor="@color/grey_deep"/>  
        </shape>  
    </item>  
    <!-- layout foreground -->  
    <item  
        android:bottom="3px"  
        android:top="3px">  
        <!-- show rectangle area -->  
        <shape android:shape="rectangle" >  
            <solid android:color="@color/grey_deep" />  
        </shape>  
    </item>  
</layer-list>